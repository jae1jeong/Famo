<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="30dp"
    >
    <TextView
        android:background="@color/shimmer_loading_color"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/shimmer_calendar_header_text_month_title"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="46sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_marginStart="5dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/shimmer_calendar_header_layout_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/shimmer_calendar_header_text_month_title"
        app:layout_constraintStart_toEndOf="@id/shimmer_calendar_header_text_month_title">

        <TextView
            android:background="@color/shimmer_loading_color"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/shimmer_calendar_header_text_year"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:background="@color/shimmer_loading_color"
            android:layout_marginStart="7dp"
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_gravity="bottom"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/shimmer_calendar_header_btn_left"
        android:layout_marginEnd="20dp"
        android:src="@drawable/monthly_arrow_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/textView17"
        app:layout_constraintEnd_toStartOf="@+id/textView17"
        app:layout_constraintTop_toTopOf="@+id/textView17" />

    <ImageView
        android:id="@+id/shimmer_calendar_header_btn_right"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/monthly_header_right"
        app:layout_constraintBottom_toBottomOf="@+id/textView17"
        app:layout_constraintStart_toEndOf="@+id/textView17"
        app:layout_constraintTop_toTopOf="@+id/textView17" />

    <TextView
        android:gravity="center"
        android:background="@drawable/background_shimmer_radius"
        android:id="@+id/textView17"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="45dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/shimmer_calendar_header_text_month_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/shimmer_calendar_header_text_month_title" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="16dp"
        android:background="@color/shimmer_loading_color"
        android:paddingBottom="16dp"
        android:weightSum="7"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_calendar_header_layout_year">

        <TextView
            android:id="@+id/shimmer_calendar_header_text_sun"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/shimmer_loading_color"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textColor="@color/schedule_find_text" />

        <TextView
            android:id="@+id/shimmer_calendar_header_text_mon"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/shimmer_loading_color"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textColor="@color/schedule_find_text" />

        <TextView
            android:id="@+id/shimmer_calendar_header_text_tue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textColor="@color/schedule_find_text" />

        <TextView
            android:id="@+id/shimmer_calendar_header_text_wed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textColor="@color/schedule_find_text" />

        <TextView
            android:id="@+id/shimmer_calendar_header_text_thu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textColor="@color/schedule_find_text" />

        <TextView
            android:id="@+id/shimmer_calendar_header_text_fri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textColor="@color/schedule_find_text" />

        <TextView
            android:id="@+id/shimmer_calendar_header_text_sat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textColor="@color/schedule_find_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="27dp"
        android:background="@color/shimmer_loading_color"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>