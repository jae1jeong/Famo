<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <TextView
        android:id="@+id/shimmer_schedule_find_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/shimmer_loading_color"
        android:ems="10"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:maxLines="1"
        android:paddingLeft="20dp"
        android:paddingTop="130dp"
        android:paddingRight="15dp"
        android:paddingBottom="16dp"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1"
        app:layout_constraintTop_toBottomOf="@+id/shimmer_schedule_find_btn">

        <ImageView
            android:id="@+id/shimmer_schedule_find_btn_category"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/category_edit_plus"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:id="@+id/shimmer_recyclerview_category"
                android:layout_width="42dp"
                android:layout_height="27dp"
                android:background="@drawable/background_shimmer_radius"
                />
            <TextView
                android:layout_marginEnd="5dp"
                android:layout_width="42dp"
                android:layout_height="27dp"
                android:background="@drawable/background_shimmer_radius"
                />

            <TextView
                android:layout_marginEnd="5dp"
                android:layout_width="42dp"
                android:layout_height="27dp"
                android:background="@drawable/background_shimmer_radius"
                />

            <TextView
                android:layout_marginEnd="5dp"
                android:layout_width="42dp"
                android:layout_height="27dp"
                android:background="@drawable/background_shimmer_radius"
                />
            <TextView
                android:layout_marginEnd="5dp"
                android:layout_width="42dp"
                android:layout_height="27dp"
                android:background="@drawable/background_shimmer_radius"
                />
            <TextView
                android:layout_marginEnd="5dp"
                android:layout_width="42dp"
                android:layout_height="27dp"
                android:background="@drawable/background_shimmer_radius"
                />


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>