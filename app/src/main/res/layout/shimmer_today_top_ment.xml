<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginHorizontal="10dp"
android:layout_marginBottom="15dp"
app:layout_constraintTop_toTopOf="parent">

<TextView
    android:background="@color/shimmer_loading_color"
    android:id="@+id/today_text_goal_title_shimmer"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="15dp"
    android:textColor="@color/black"
    android:textSize="26sp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:layout_marginTop="10dp"
    android:background="@color/shimmer_loading_color"
    android:id="@+id/today_text_goal_sub_title_shimmer"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:textColor="@color/black"
    android:textSize="26sp"
    android:textStyle="bold"
    app:layout_constraintStart_toStartOf="@+id/today_text_goal_title_shimmer"
    app:layout_constraintTop_toBottomOf="@+id/today_text_goal_title_shimmer" />


<TextView
    android:background="@color/shimmer_loading_color"
    android:layout_marginTop="7dp"
    android:id="@+id/today_text_done_schedule_shimmer"
    android:layout_width="65dp"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="@+id/today_text_goal_sub_title_shimmer"
    app:layout_constraintTop_toBottomOf="@+id/today_text_goal_sub_title_shimmer" />

<TextView
    android:background="@color/shimmer_loading_color"
    android:id="@+id/today_text_rest_schedule_shimmer"
    android:layout_width="65dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    app:layout_constraintBottom_toBottomOf="@+id/textView3"
    app:layout_constraintStart_toEndOf="@+id/textView3"
    app:layout_constraintTop_toTopOf="@+id/textView3" />

<TextView
    android:background="@color/shimmer_loading_color"
    android:id="@+id/textView3"
    android:layout_width="10dp"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    app:layout_constraintBottom_toBottomOf="@+id/today_text_done_schedule_shimmer"
    app:layout_constraintStart_toEndOf="@id/today_text_done_schedule_shimmer"
    app:layout_constraintTop_toTopOf="@+id/today_text_done_schedule_shimmer" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginVertical="10dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/background_shimmer_radius"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>