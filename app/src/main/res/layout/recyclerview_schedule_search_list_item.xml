<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="15.8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/item_search_img"
            android:layout_width="14dp"
            android:layout_height="15.6dp"
            android:background="@drawable/schedule_search_content_img"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/item_search_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textColor="#a7adb5"
            android:text="학교"
            android:layout_toRightOf="@id/item_search_img"
            android:layout_marginLeft="13.5dp"/>
        
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/schedule_search_list_x_btn"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


</LinearLayout>